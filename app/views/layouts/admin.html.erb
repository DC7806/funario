<!DOCTYPE html>
<html>
  <head>
    <title>Backyard | Funario</title>
    <meta name="viewport"              content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-lg-2">
          <nav class="navbar navbar-default navbar-fixed-side">
            <div class="container">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <%= link_to 'Funario', admin_root_path, class: "navbar-brand" %>
              </div>
              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <!-- <li class=""><a href="#">Homepage <span class="sr-only">(current)</span></a></li> -->
                  <li><%= link_to 'Dashboard', admin_root_path %></li>
                  <li><%= link_to 'Sliders', admin_sliders_path %></li>
                  <li><%= link_to 'Articles', admin_articles_path %></li>
                  <li><%= link_to 'Authors', admin_authors_path %></li>
                  <li><%= link_to 'Meta', admin_meta_path %></li>
                  <li><%= link_to 'System', edit_admin_system_path(System.first) %></li>
                  <li><%= link_to 'Password', edit_user_registration_path %></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <%= admin_status %>
                  </li>
                  <!-- <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="#">Action</a></li>
                      <li><a href="#">Another action</a></li>
                      <li><a href="#">Something else here</a></li>
                      <li role="separator" class="divider"></li>
                      <li><a href="#">Separated link</a></li>
                    </ul>
                  </li> -->
                </ul>
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </nav>
        </div>
        <div class="col-sm-9 col-lg-10">
          <div class="col-lg-10 col-lg-offset-1">
            <%= notice_msg %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <!-- to be revised as rails active link -->
    <script type="text/javascript">
      $(".nav.navbar-nav li a").on("click", function() {
        $(this).closest('li').siblings().removeClass("active");
        $(this).closest('li').addClass("active");
      });
    </script>
    <!-- to be revised as rails active link -->
    <script type="text/javascript">
      $('.input-group-btn').on('click', function(){
        $('#visibility-toggle').removeClass('invisible')
      })
    </script>
  </body>
</html>
