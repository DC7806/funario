<div class="container">
  <h1><%= @article.title %></h1>
</div>

<div class="container">
  <div class="row">
    <%= image_tag @article.image, alt: "#{@article.cover_image_alt}", src: "#{@article.image.file.path}", class: "col-xs-12 col-sm-6 col-sm-offset-3" %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= @article.content.html_safe %>
    </div>
  </div>
</div>

