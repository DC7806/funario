<div class="container">
  <div class="article-wrapper col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="row">
      <h1><%= @article.title %></h1>
      <h5><%= @article.author %></h5>
      <h5><%= @article.created_at.to_date %></h5>
    </div>
    <div class="row">
      <%= image_tag @article.image.url, alt: "#{@article.image_alt}", style: "width: 100%"%>
    </div>
  
    <%= editor_tag @article %>      
    <%= tagging_tag @article %>  
    <%= render 'disqus' %>
  </div>
</div>