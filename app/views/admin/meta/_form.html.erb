<%= form_for @metum, url: admin_metum_path(@metum) do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :meta_description, "Meta Description" %>
    <%= f.text_area :meta_description, class: "form-control", style: "min-height: 100px" %>
  </div>
  <div class="form-group">
    <%= f.label :og_image, "OG Image" %>
    <%= f.file_field :og_image, class: "dropify", "data-default-file": @metum.og_image %>
  </div>
  <div style="margin: 20px 0">
    <%= f.submit 'confirm', class: "btn btn-primary form-control"%>
    <%= link_to "cancel", admin_meta_path, class: "btn btn-default form-control", style: "margin-top: 20px"%>
  </div>
<% end %>

<%= render 'admin/share/dropify' %>