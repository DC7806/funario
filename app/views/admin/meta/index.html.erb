<style type="text/css">
  tbody > tr:hover {
    background: #e7e7e7
  }
  td {
    vertical-align: middle!important
  }
  @media only screen and (max-width: 767px){
    tbody > tr {
      display: block;
      background: #e7e7e7;
      border: 1px solid #e7e7e7;
      border-radius: 8px;
      margin: 10px 0;
    }
    table tbody td {
      display: block!important
    }
    .table > tbody > tr > td{
      border-top: none;
      text-align: center;
    }
  }
</style>

<h1>Meta List</h1>

<table class="table">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-2">Page</td>
      <td class="col-sm-3">Title</td>
      <td class="col-sm-5">Meta Description</td>
    </tr>
  </thead>
  <tbody>
    <% @meta.each do |metum|%>
    <tr>
      <td class="col-sm-2"><%= metum.page_name %></td>
      <td class="col-sm-3"><%= metum.title %></td>
      <td class="col-sm-5"><%= metum.meta_description %></td>
      <td class="col-sm-1"><%= link_to edit_admin_metum_path(metum), class: "btn btn-primary" do%><i class="fa fa-bolt fa-fw"></i><% end %></td>
    </tr>
    <%end%>
  </tbody>
</table>