<%= form_for author do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :nickname, "Nick Name" %>
    <%= f.text_field :nickname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :summary, "Author Summary" %>
    <%= f.text_area :summary, class: "form-control", style: "min-height:100px" %>
  </div>

  <%= f.submit 'confirm', class: "btn btn-primary form-control", style: "margin-top: 20px"%>
  <%= link_to "cancel", admin_authors_path, class: "btn btn-default form-control", style: "margin-top: 20px" %>

<% end %>