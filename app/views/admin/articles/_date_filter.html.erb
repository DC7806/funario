<div class="input-group col-xs-12 col-sm-6 col-sm-offset-6">
    <%= form_tag admin_articles_path, method: :get do %>
      <div class="col-xs-5"><%= text_field_tag 'date_range[date_from]',"", class: "form-control", placeholder: "Start Date"%></div>
      <div class="col-xs-5"><%= text_field_tag 'date_range[date_to]',"", class: "form-control", placeholder: "End Date"%></div>
      <%= submit_tag 'Search', class: 'btn btn-default search-botton col-sm-2' %>
    <% end %>
</div>

