<div class="input-group col-xs-12 col-sm-6 col-sm-offset-6">
    <%= form_tag admin_articles_path, method: :get do %>
      <div class="col-xs-5"><%= text_field_tag 'date_range[date_from]',"", class: "form-control", placeholder: "Date From"%></div>
      <div class="col-xs-5"><%= text_field_tag 'date_range[date_to]',"", class: "form-control", placeholder: "Date To"%></div>   
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
</div>

