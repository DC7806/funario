<%= form_tag admin_articles_path, method: "get" do %>
  <div class="input-group">
    <%= text_field_tag :query, params[:query], placeholder: "Search Here", class: "form-control"%>
    <!-- wrong: text_field_tag 'Search' -->
    <span class="input-group-btn">
      <%= submit_tag 'Search', class: "btn btn-default", style: "min-width:100px" %>
    </span> 
  </div>
<% end %>

<%= link_to "Back to All Articles", admin_articles_path, class: "btn btn-default form-control", id: "visibility-toggle", style: "margin-top:5px;margin-bottom:20px"%>