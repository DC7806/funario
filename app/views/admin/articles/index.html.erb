<h1>Article List</h1>

<%= render 'search' %>

<%= render 'date_filter' %>

<%= link_to "Add Article", new_admin_article_path, class: "btn btn-default" %>

<table class="table">
  <thead>
    <tr>
      <td>Date</td>
      <td>Title</td>
      <td>Author</td>
      <td>Description</td>
      <td>URL</td>
    </tr>
  </thead>
  <tbody>
    <% @admin_articles.each do |article|%>
    <tr>
      <td><%= article.created_at.to_date %></td>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td><%= article.description %></td>
      <td><%= article.permalink %></td>
      <td><%= link_to "Edit", edit_admin_article_path(article), class: "btn btn-primary" %></td>
      <td><%= link_to "Delete", admin_article_path(article), method: "delete", data: { confirm: "Sure?" }, class: "btn btn-danger" %></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%= paginate @admin_articles %>