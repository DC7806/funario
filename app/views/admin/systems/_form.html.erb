<%= form_for @system do |f| %>
  <div class="form-group">
    <%= f.label :site_name, "Site Name" %>
    <%= f.text_field :site_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :logo, "Logo" %>
    <%= f.file_field :logo, class: "dropify", "data-default-file": @system.logo %>
  </div>

  <div class="form-group">
    <%= f.label :facebook_id, "Facebook ID" %>
    <%= f.text_field :facebook_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :gtm_id, "GTM" %>
    <%= f.text_field :gtm_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ga_id, "Google Analytics ID" %>
    <%= f.text_field :ga_id, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :fb_pixel, "Facebook Pixel" %>
    <%= f.text_field :fb_pixel, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :css_version, "Custom CSS Version" %>
    <%= f.text_field :css_version, class: "form-control" %>
  </div>


  <%= f.submit 'confirm', class: "btn btn-primary form-control", style: "margin: 20px 0"%>

<% end %>

<%= render 'admin/share/dropify' %>