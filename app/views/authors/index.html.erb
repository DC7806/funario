<div id="authors">
  <div class="container">
    <div class="row authors-wrapper">
      <% @authors.each do |author| %>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <h2><%= author.nickname %></h2>
          <p><%= author.summary %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>